@model Beer_Olympics.Game

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <style>
        #draftboard {
            z-index: 9;
            background-color: white;
            
            text-align: center;
            padding-bottom: 10px;
        }

        #draftboardheader {
            padding: 10px;
            z-index: 10;
           
            text-align: center;
            color: Black;
            font-weight: bolder;
            font-size: 32px;
        }
        #playersbox {
            padding: 15px;
            z-index: 10;
      
            border: 1px solid black;
            text-align: center;
            color: white;
            font-weight: bolder;
            font-size: 35px;
        }
        #teamsbox {
            padding: 15px;
            z-index: 10;
            border: 1px solid black;
            text-align: center;
            color: black;
            font-weight: bolder;
            font-size: 35px;
        }
    </style>

    <div  class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div style="border:solid 2px black">

            <br />
            <div style="padding-top:10px" class="col">


                @Html.DropDownList("games",(IEnumerable<SelectListItem>)ViewBag.GamesList, "", new { @class = "form-control players selectpicker maxwidth dropdown-menu.inner", id = "gamename" })



            </div>

            <br />
            <div class="container-fluid" style="border: 1px solid black;">
                <div id="draftboardheader">Teams</div>
                <div style="" class="drafted row">

                </div>
            </div>

        </div>

        <br />
        <br />
       
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script>

 
    $('#gamename').on('change', function () {
        var gamelistrules = {
            ID: $('#gamename option:selected').val()
        };
        $.ajax({
            type: "Post",

            url: "/Games/GetRules",
            data: JSON.stringify(gamelistrules),
            dataType: "json",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                var count = 1
                const table = $('.drafted')
                table.html('');

              
                    table.append('<div nowrap style="border: 5px solid lightgray" class=col-2 id="playersbox"><div class="player col-12" style=background-color:white;color:black;width:auto%><p>'+data.rules + '</p></div></div>')
                    /*table.append('<tr class=draftrow style=font-size:12px id=' + val.Player_ID + '><td>' + val.Player_Name + '</td>/<tr>')*/


                
            }
        });
    });




   



   
</script>